<li class="contact pure-u-1-5">
    
    <h1>{{firstName}} {{lastName}}</h1>
    {{#if avatar}}
        <img src="{{avatar}}"></img>
    {{/if}}
    <button class="pure-button show-details">Details</button>
    <div class="contact-details">
    {{#if birthday}}
        <h4 class="birthday"> {{birthday}}</h4>
    {{/if}}
    {{#each phoneNumbers}}
        <h4 class="phone">{{type}} - {{phoneNumber}}</h4>
    {{/each}}
    <dl>
    {{#each address}}
        <dt>{{desc}}</dt>
            <dd>{{street}}</dd>
            <dd>{{city}}, {{state}}</dd>
            <dd>{{zip}}</dd>
    {{/each}}
    </dl>
    </div>
</li>